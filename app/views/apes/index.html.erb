<div class="container mt-5">
    <div class="row"> 
        <div class="column"> 

            <h1><strong>The Bored Apes Club<strong></h1>

            <div class="container">
            <% if policy(Ape).create?%>
            <%= link_to 'create your own', new_ape_path, class: "btn btn-warning"%>
            <% end %>
            </div>

    

            <div class="col-6">
                <ul class="container">
                    <% @apes.each do |ape| %>
                        <div class="card-product">
                        <%= image_tag "https://i0.wp.com/wersm.com/wp-content/uploads/2022/01/wersm-eminem-joins-the-bored-ape-yacht-club-by-buying-a-460m-eminape.jpg?fit=1024%2C768&ssl=1" %>
                            <div class="card-product-infos">
                                <h2><%= ape.name %></h2>
                                <p><%= ape.address %></p>
                                <%= link_to "See this Ape", ape_path(ape), class: "btn btn-warning" %>

                            </div>
                        </div>
                    <% end %>
                </ul>
            </div>

    





         </div>
    </div>
</div>

