  <div class="container mt-5">
        <h1><%= @ape.name %></h1>
        <p> <small><%= @ape.address %></small> </p>

            <%= link_to "Update your  ape",  edit_ape_path(@ape), class: "btn btn-update" %>
            <%= link_to "Delete #{@ape.name}",
                        ape_path(@ape),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>

        <h2>
        <%= pluralize @ape.reviews.size, "review" %>
        </h2>

        <div id="reviews">
        <% if @ape.reviews.blank? %>
            Be the first to review this Ape <%= @ape.name %>
        <% else %>
            <% @ape.reviews.each do |review| %>
            <p><%= review.content %></p>
            <% end %>
        <% end %>
        </div>

        <%= simple_form_for([ @ape, @review ]) do |f| %>
            <%= f.input :content, as: :text %>
            <%= f.button :submit %>
        <% end %>

  </div>


